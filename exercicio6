
valor_por_hora = float(input("Digite o valor do salário por hora: "))
horas_trabalhadas = float(input("Digite o número de horas trabalhadas no mês: "))

salario_bruto = valor_por_hora * horas_trabalhadas

imposto_renda = salario_bruto * 0.11
inss = salario_bruto * 0.08
sindicato = salario_bruto * 0.05

salario_liquido = salario_bruto - imposto_renda - inss - sindicato
print("Salário bruto: R$", salario_bruto)
print("Desconto Imposto de Renda: R$", imposto_renda)
print("Desconto INSS: R$", inss)
print("Desconto sindicato: R$", sindicato)
print("Salário líquido: R$", salario_liquido)

